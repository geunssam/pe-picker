{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "Store": "readonly",
    "BaseRepo": "readonly",
    "ClassRepo": "readonly",
    "SettingsRepo": "readonly",
    "TagGameRepo": "readonly",
    "GroupManagerRepo": "readonly",
    "TeacherRepo": "readonly",
    "TagPicker": "readonly",
    "GroupPicker": "readonly",
    "UI": "readonly",
    "Sound": "readonly",
    "IosUtils": "readonly",
    "TimerModule": "readonly",
    "ClassManager": "readonly",
    "TagGame": "readonly",
    "TagGameUI": "readonly",
    "GroupManager": "readonly",
    "GroupManagerUI": "readonly",
    "AuthManager": "readonly",
    "App": "readonly",
    "firebase": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error",
    "semi": ["warn", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "no-multiple-empty-lines": ["warn", { "max": 2 }],
    "eol-last": ["warn", "always"]
  }
}
