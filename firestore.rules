rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 사용자는 자신의 데이터만 접근 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // 사용자의 학급 데이터
      match /classes/{classId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // 학급의 학생 데이터
        match /students/{studentId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }

    // 다른 모든 접근 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
